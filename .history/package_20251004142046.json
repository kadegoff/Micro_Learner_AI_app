{
  "name": "micro-learner-ai",
  "version": "1.0.0",
  "description": "AI-powered meeting assistant",
  "main": "main.js",
  "author": "MicroLearnerAI.com",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "dist": "npm run build",
    "postinstall": "node download-models.js",
    "prebuild": "npm run setup-python-deps",
    "setup-python-deps": "pip install vosk && npm run download-models",
    "download-models": "node download-models.js"
  },
  "build": {
    "appId": "com.microlearner.ai-assistant",
    "productName": "Micro Learner AI",
    "copyright": "Copyright © 2025 Micro Learner AI",
    "directories": {
      "output": "release-builds"
    },
    "files": [
      "main.js",
      "assets/**/*",
      "*.html", 
      "*.css",
      "*.js",
      "*.py",  // ← ADD THIS LINE to include Python files in root
      "preload.js",
      "languagetool-manager.js", 
      "download-models.js",
      "models/**/*",
      "node_modules/compromise/**/*",
      "node_modules/**/*",
      "!**/node_modules/**/*.{md,markdown,ts,test}",
      "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples,docs}",
      "!**/node_modules/.bin",
      "!release-builds/**",
      "!.git/**",
      "!**/*.map",
      "!**/*.log"
    ],
    "extraResources": [
      {
        "from": "models",
        "to": "models"
      },
      {
        "from": "assets", 
        "to": "assets"
      },
      {
        "from": ".",
        "to": ".",
        "filter": ["*.py", "requirements.txt"]  // ← ADD THIS to include root Python files
      }
    ],
    "asar": true,
    "asarUnpack": [
      "node_modules/compromise/**/*",
      "node_modules/**/*.node", 
      "models/**/*",
      "*.py"  // ← ADD THIS to unpack Python files
    ],
    "win": {
      "icon": "assets/icon.png",
      "target": "nsis",
      "executableName": "Micro Learner AI"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "perMachine": false
    }
  },
  "keywords": [
    "electron",
    "speech-recognition",
    "ai",
    "meeting",
    "assistant"
  ],
  "license": "MIT",
  "devDependencies": {
    "adm-zip": "^0.5.16",
    "electron": "^27.0.0",
    "electron-builder": "^24.13.3"
  },
  "dependencies": {
    "compromise": "^14.14.4",
    "express": "^4.18.2",
    "python-shell": "^5.0.0"
  }
}
