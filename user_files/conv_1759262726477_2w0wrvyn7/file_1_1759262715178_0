// Global configuration
$serverMode = true;
if ($serverMode) {
  const API_BASE_URL = "../../../backend";
} else {
  const API_BASE_URL = "/backend";
}
let authToken = localStorage.getItem("Micro_Learner_token");
let currentUser = null;
let currentPlan = null;
let selectedPlan = null;
let selectedModel = "chatgpt";

console.log("ğŸ Micro Learner App Initializing...");
console.log("ğŸ”§ API_BASE_URL:", API_BASE_URL);
console.log("ğŸ”‘ Initial authToken:", authToken ? "TOKEN_EXISTS" : "NO_TOKEN");
console.log("ğŸ‘¤ Initial currentUser:", currentUser);
console.log("ğŸ“Š Initial selectedModel:", selectedModel);

// Fix 1: Prevent infinite logout loops
let isLoggingOut = false; // Add this global flag

// Update your AJAX error handler in $.ajaxSetup
$.ajaxSetup({
  beforeSend: function (xhr) {
    console.log("ğŸš€ AJAX Request Starting");
    console.log("ğŸ“ URL:", this.url || "URL not available");

    // Extract filename from URL for better logging
    const fileName = this.url
      ? this.url.split("/").pop().split("?")[0]
      : "unknown";
    console.log("ğŸ“„ Target File:", fileName);

    console.log("ğŸ”§ Method:", this.type || this.method || "GET");
    console.log("ğŸ“¦ Data:", this.data || "No data");

    if (authToken) {
      xhr.setRequestHeader("Authorization", "Bearer " + authToken);
      console.log("ğŸ”‘ Auth token added to request");
    } else {
      console.log("âš ï¸ No auth token available");
    }

    $(".loading-spinner").show();
    console.log("â³ Loading spinner shown");
  },

  complete: function (xhr, status) {
    const fileName = this.url
      ? this.url.split("/").pop().split("?")[0]
      : "unknown";
    console.log(`âœ… AJAX Request Complete for ${fileName}`);
    console.log("ğŸ“Š Status:", status);
    console.log("ğŸ”¢ HTTP Status Code:", xhr.status);
    console.log(
      `ğŸ“„ Response Text Length from ${fileName}:`,
      xhr.responseText ? xhr.responseText.length : 0
    );

    $(".loading-spinner").hide();
    console.log("âœ¨ Loading spinner hidden");
  },

  error: function (xhr, status, error) {
    const fileName = this.url
      ? this.url.split("/").pop().split("?")[0]
      : "unknown";
    console.log(`âŒ AJAX Request Error from ${fileName}`);
    console.log("ğŸ”¢ HTTP Status:", xhr.status);
    console.log("ğŸ“ Status Text:", status);
    console.log("âš¡ Error:", error);
    console.log(`ğŸ“„ Response Text from ${fileName}:`, xhr.responseText);

    try {
      const responseJSON = JSON.parse(xhr.responseText);
      console.log(`ğŸ“Š Parsed Response from ${fileName}:`, responseJSON);
    } catch (e) {
      console.log("âš ï¸ Could not parse response as JSON");
    }

    // ğŸ”§ FIX: Skip global error handling for promo code validation
    if (fileName === "validate_promo_code.php") {
      console.log("ğŸ« Skipping global error handler for promo code validation");
      return; // Let the specific handler deal with it
    }

    // FIX: Prevent infinite logout loops
    if (xhr.status === 401 && !isLoggingOut) {
      console.log("ğŸšª Unauthorized - redirecting to login");
      logout();
    } else if (xhr.status === 401 && isLoggingOut) {
      console.log("ğŸ”„ Already logging out, skipping additional logout call");
    } else {
      const errorMsg = xhr.responseJSON?.error || "An error occurred";
      console.log("ğŸ¯ Error message to show:", errorMsg);
      showToast(errorMsg, "error");
    }
  },

  success: function (data, status, xhr) {
    const fileName = this.url
      ? this.url.split("/").pop().split("?")[0]
      : "unknown";
    console.log(`ğŸ‰ AJAX Request Success from ${fileName}`);
    console.log("ğŸ“Š Status:", status);
    console.log(`ğŸ“¦ Response Data from ${fileName}:`, data);
    console.log("ğŸ”¢ HTTP Status Code:", xhr.status);
  },
});

