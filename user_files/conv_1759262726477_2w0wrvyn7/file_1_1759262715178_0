// ================== MAIN AUTHENTICATION CHECK (PAGE LOAD ONLY) ==================

function initializeAuthenticationCheck() {
  console.log("ğŸ” Checking authentication on page load/refresh ONLY");

  // âœ¨ NEW: Try to get auth data from cookies first if not in memory
  if (!authToken) {
    authToken = getCookie("auth_token");
    console.log(
      "ğŸª Auth token from cookie:",
      authToken ? "EXISTS" : "NOT_FOUND"
    );
  }

  if (!currentUser) {
    const userCookie = getCookie("current_user");
    if (userCookie) {
      try {
        currentUser = JSON.parse(userCookie);
        console.log(
          "ğŸª Current user from cookie:",
          currentUser ? "EXISTS" : "NOT_FOUND"
        );
      } catch (e) {
        console.error("âŒ Failed to parse current user cookie:", e);
        deleteCookie("current_user");
      }
    }
  }

  console.log("ğŸ”‘ Auth token exists:", !!authToken);

  if (authToken) {
    const userData = localStorage.getItem("Micro_Learner_user");
    console.log(
      "ğŸ‘¤ User data from localStorage:",
      userData ? "EXISTS" : "NOT_FOUND"
    );

    // ONLY validate token with server on page load/refresh
    console.log(
      "ğŸ”„ Page load detected - validating token with server via auto login"
    );

    attemptAutoLogin()
      .then(function (success) {
        if (success) {
          console.log("âœ… Token validation successful on page load");
          // No need to start session monitoring - the global AJAX error handler
          // will automatically detect 401 responses and logout when needed
        } else {
          console.log("âŒ Token validation failed on page load");
          handleFailedAutoLogin(userData);
        }
      })
      .catch(function (error) {
        console.error("ğŸš¨ Auto login attempt failed with error:", error);
        handleFailedAutoLogin(userData);
      });
  } else {
    console.log("âŒ No auth token on page load, showing landing page");
    showLanding();
  }
}

function handleFailedAutoLogin(userData) {
  // Token is invalid - check if we have cached user data as fallback
  if (userData) {
    console.log(
      "âš ï¸ Token invalid but cached data exists - using cached data temporarily"
    );
    try {
      currentUser = JSON.parse(userData);
      console.log("ğŸ‘¤ Using cached user data:", currentUser);

      // FIXED: Initialize dashboard with plan restrictions before showing it
      initializeDashboard(currentUser.plan);
      showDashboard();
      loadDashboardData();
      showToast("Using offline data - some features may be limited", "warning");
    } catch (parseError) {
      console.error("âŒ Failed to parse cached user data:", parseError);
      clearAuthData();
      showLanding();
    }
  } else {
    console.log("âŒ No valid token and no cached data, showing landing page");
    clearAuthData();
    showLanding();
  }
}
$(document).ready(function () {
  console.log("ğŸš€ Document ready - initializing event listeners");

  console.log("ğŸ‘¥ Setting up enterprise invite modal event listeners");

  // Close modal button
  $("#close-enterprise-invite").on("click", function () {
    console.log("âŒ Close enterprise invite modal button clicked");
    // Don't allow closing without making a decision
    showToast(
      "Please review your team invitations and choose to accept or decline",
      "info"
    );
  });

  // Decline all invites button
  $("#decline-all-invites-btn").on("click", function () {
    console.log("âŒ Decline all invites button clicked");
    declineAllEnterpriseInvites();
  });

  // Prevent closing modal by clicking outside - require explicit decision
  $("#enterprise-invite-modal").on("click", function (e) {
    if ($(e.target).hasClass("modal")) {
      console.log(
        "â„¹ï¸ Clicked outside enterprise invite modal - requiring decision"
      );
      showToast(
        "Please review your team invitations and choose to accept or decline",
        "info"
      );
    }
  });

  console.log("âœ… Enterprise invite modal event listeners initialized");

  // Initialize Google Sign-In when page loads
  initializeGoogleSignIn();

  // Render actual Google button in hidden div
  if (typeof google !== "undefined" && google.accounts) {
    google.accounts.id.renderButton(
      document.getElementById("google-signin-button"),
      {
        theme: "outline",
        size: "large",
        text: "continue_with",
      }
    );
  }

  console.log("âœ… All event listeners initialized successfully");

  // Cancel plan button listener
  $(document).on("click", "#cancel-plan-btn", function () {
    console.log("ğŸ—‘ï¸ Cancel plan button clicked");
    cancelPlan();
  });

  console.log("âœ… Cancel plan event listeners initialized");

  // Initialize authentication check with auto login support
  initializeAuthenticationCheck();

  // Check for payment success/cancel
  const payment = getUrlParameter("payment");
  console.log("ğŸ’³ Payment URL parameter:", payment);

  if (payment === "success") {
    console.log("âœ… Payment successful detected");
    showToast("Payment successful! Your plan has been upgraded.", "success");
    window.history.replaceState({}, document.title, window.location.pathname);
  } else if (payment === "cancelled") {
    console.log("âŒ Payment cancelled detected");
    showToast("Payment cancelled", "error");
    window.history.replaceState({}, document.title, window.location.pathname);
  }

  // Add loading spinner
